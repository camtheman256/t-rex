{
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-jinja-template": "^1.4.1"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jinja-template"
    ],
    "overrides": [
      {
        "files": [
          "templates/*.html"
        ],
        "options": {
          "parser": "jinja-template"
        }
      }
    ],
    "proseWrap": "always"
  }
}
