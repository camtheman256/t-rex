{
  "devDependencies": {
    "prettier": "^3.0.3",
    "prettier-plugin-jinja-template": "^1.2.0"
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          "templates/*"
        ],
        "options": {
          "parser": "jinja-template"
        }
      }
    ],
    "proseWrap": "always"
  }
}
